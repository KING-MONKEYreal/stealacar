local player = game.Players.LocalPlayer


local gui = Instance.new("ScreenGui")
gui.Name = "ZeroHub"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- MAIN FRAME
local main = Instance.new("Frame")
main.Size = UDim2.new(0,760,0,600)
main.Position = UDim2.new(.5,-380,.5,-300)
main.BackgroundColor3 = Color3.fromRGB(20,20,20)
main.Active = true
main.Draggable = true
main.ClipsDescendants = true
main.Parent = gui
Instance.new("UICorner",main).CornerRadius = UDim.new(0,14)


local stroke = Instance.new("UIStroke",main)
stroke.Color = Color3.fromRGB(100,0,255)
stroke.Thickness = 2
stroke.Transparency = 0.55

local grad = Instance.new("UIGradient",main)
grad.Color = ColorSequence.new(Color3.fromRGB(45,45,45),Color3.fromRGB(10,10,10))
grad.Rotation = 90


local destroyBtn = Instance.new("TextButton")
destroyBtn.Size = UDim2.new(0,46,0,46)
destroyBtn.Position = UDim2.new(1,-60,0,14)
destroyBtn.Text = "‚úñ"
destroyBtn.TextScaled = true
destroyBtn.TextColor3 = Color3.fromRGB(255,255,255)
destroyBtn.BackgroundColor3 = Color3.fromRGB(220,20,20)
destroyBtn.Parent = main
Instance.new("UICorner",destroyBtn).CornerRadius = UDim.new(0,12)
destroyBtn.MouseEnter:Connect(function() destroyBtn.BackgroundColor3 = Color3.fromRGB(255,50,50) end)
destroyBtn.MouseLeave:Connect(function() destroyBtn.BackgroundColor3 = Color3.fromRGB(220,20,20) end)
destroyBtn.MouseButton1Click:Connect(function() gui:Destroy() end)


local sidebar = Instance.new("Frame",main)
sidebar.Size = UDim2.new(0,160,1,-40)
sidebar.Position = UDim2.new(0,10,0,30)
sidebar.BackgroundColor3 = Color3.fromRGB(22,22,35)
Instance.new("UICorner",sidebar).CornerRadius = UDim.new(0,12)

local sbLayout = Instance.new("UIListLayout",sidebar)
sbLayout.Padding = UDim.new(0,8)
sbLayout.FillDirection = Enum.FillDirection.Vertical


local pages = {}
local function newPage(name)
	local p = Instance.new("ScrollingFrame",main)
	p.Name = name
	p.Size = UDim2.new(1,-200,1,-60)
	p.Position = UDim2.new(0,180,0,30)
	p.BackgroundTransparency = 1
	p.ScrollBarThickness = 6
	p.AutomaticCanvasSize = Enum.AutomaticSize.Y
	p.Visible = false
	local layout = Instance.new("UIListLayout",p)
	layout.Padding = UDim.new(0,10)
	layout.SortOrder = Enum.SortOrder.LayoutOrder
	Instance.new("UIPadding",p).PaddingLeft = UDim.new(0,10)
	pages[name] = p
	return p
end

local currentTab
local function activateTab(name)
	for _,p in pairs(pages) do p.Visible = false end
	pages[name].Visible = true
	currentTab = name
end


local function tab(title,emoji,page)
	local b = Instance.new("TextButton",sidebar)
	b.Size = UDim2.new(1,-10,0,48)
	b.Text = emoji.." "..title
	b.TextScaled = true
	b.Font = Enum.Font.GothamBold
	b.TextColor3 = Color3.fromRGB(220,220,255)
	b.BackgroundColor3 = Color3.fromRGB(28,28,40)
	Instance.new("UICorner",b).CornerRadius = UDim.new(0,10)
	local stroke = Instance.new("UIStroke",b)
	stroke.Color = Color3.fromRGB(140,0,255)
	stroke.Transparency = .55

	b.MouseEnter:Connect(function() b.BackgroundColor3 = Color3.fromRGB(45,45,65) end)
	b.MouseLeave:Connect(function() if currentTab ~= page then b.BackgroundColor3 = Color3.fromRGB(28,28,40) end end)
	b.MouseButton1Click:Connect(function()
		for _,btn in ipairs(sidebar:GetChildren()) do if btn:IsA("TextButton") then btn.BackgroundColor3 = Color3.fromRGB(28,28,40) end end
		b.BackgroundColor3 = Color3.fromRGB(60,60,110)
		activateTab(page)
	end)
end


local home = newPage("Home")
local movement = newPage("Movement")
local bases = newPage("Bases")
local rewards = newPage("Rewards")
local misc = newPage("Misc")

tab("Home","üè†","Home")
tab("Movement","üèÉ","Movement")
tab("Bases","üèØ","Bases")
tab("Rewards","üéÅ","Rewards")
tab("Misc","‚öôÔ∏è","Misc")


local function header(parent,text)
	local h = Instance.new("TextLabel",parent)
	h.Size = UDim2.new(1,0,0,32)
	h.Text = text
	h.Font = Enum.Font.GothamBold
	h.TextScaled = true
	h.TextColor3 = Color3.fromRGB(180,180,255)
	h.BackgroundTransparency = 1
	h.TextXAlignment = Enum.TextXAlignment.Left
end

local function box(parent,placeholder)
	local t = Instance.new("TextBox",parent)
	t.Size = UDim2.new(1,0,0,38)
	t.PlaceholderText = placeholder
	t.Text = ""
	t.TextScaled = true
	t.ClearTextOnFocus = false
	t.Font = Enum.Font.Gotham
	t.BackgroundColor3 = Color3.fromRGB(34,34,50)
	t.TextColor3 = Color3.fromRGB(230,230,255)
	Instance.new("UICorner",t).CornerRadius = UDim.new(0,10)
	return t
end

local function btn(parent,text,cb)
	local b = Instance.new("TextButton",parent)
	b.Size = UDim2.new(1,0,0,40)
	b.Text = text
	b.TextScaled = true
	b.Font = Enum.Font.Gotham
	b.TextColor3 = Color3.fromRGB(230,230,250)
	b.BackgroundColor3 = Color3.fromRGB(30,30,45)
	Instance.new("UICorner",b).CornerRadius = UDim.new(0,10)
	local s = Instance.new("UIStroke",b)
	s.Color = Color3.fromRGB(120,0,255)
	s.Transparency = .5
	b.MouseEnter:Connect(function() b.BackgroundColor3 = Color3.fromRGB(55,55,90) end)
	b.MouseLeave:Connect(function() b.BackgroundColor3 = Color3.fromRGB(30,30,45) end)
	b.MouseButton1Click:Connect(function() pcall(cb) end)
end

local function note(msg)
	task.spawn(function()
		local t = Instance.new("TextLabel")
		t.Size = UDim2.new(1,-20,0,32)
		t.Position = UDim2.new(0,10,1,-40)
		t.BackgroundColor3 = Color3.fromRGB(45,45,60)
		t.TextColor3 = Color3.fromRGB(0,255,150)
		t.TextScaled = true
		t.Font = Enum.Font.GothamBold
		t.Text = msg
		t.Parent = main
		Instance.new("UICorner",t).CornerRadius = UDim.new(0,8)
		task.wait(1.5)
		t:Destroy()
	end)
end


