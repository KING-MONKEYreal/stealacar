welcome.TextColor3 = Color3.fromRGB(180,255,180)
welcome.BackgroundTransparency = 1
welcome.TextXAlignment = Enum.TextXAlignment.Left


header(movement,"MOVEMENT")
local wsBox = box(movement,"WalkSpeed (default 16)")
local wsActive = false
btn(movement,"Toggle WalkSpeed Loop",function()
	wsActive = not wsActive
	note("Speed: "..(wsActive and "ENABLED" or "OFF"))
	task.spawn(function()
		while wsActive do
			task.wait(.15)
			if player.Character and player.Character:FindFirstChild("Humanoid") then
				player.Character.Humanoid.WalkSpeed = tonumber(wsBox.Text) or 16
			end
		end
	end)
end)


header(bases,"BASES")
local tpBox = box(bases,"Base Number")
local function getBase(n) return workspace:FindFirstChild("Bases") and workspace.Bases:FindFirstChild("Base"..n) end
btn(bases,"TP To Base",function()
	local n = tonumber(tpBox.Text)
	local b = n and getBase(n)
	if b and b:FindFirstChild("MultiplierAmount") then
		player.Character:SetPrimaryPartCFrame(CFrame.new(b.MultiplierAmount.Position + Vector3.new(0,5,0)))
		note("Teleported ‚úî")
	end
end)
btn(bases,"Lock Base",function()
	local n = tonumber(tpBox.Text)
	local b = n and getBase(n)
	if b and b:FindFirstChild("Lock") then
		player.Character:SetPrimaryPartCFrame(CFrame.new(b.Lock.Position + Vector3.new(0,5,0)))
		note("Base Locked üîê")
	end
end)


header(rewards,"REWARDS")
btn(rewards,"Infinite Money",function() game:GetService("ReplicatedStorage").LuckyTradePurchase:FireServer(-9e12) end)
btn(rewards,"Claim Free Reward",function() game:GetService("ReplicatedStorage").ClaimFreeReward:FireServer() end)
btn(rewards,"Spin Wheel",function() game:GetService("ReplicatedStorage").SpinToWinRequest:FireServer() end)


header(misc,"MISC")
btn(misc,"Remove Lasers",function()
	if workspace:FindFirstChild("Bases") then
		for _,b in pairs(workspace.Bases:GetChildren()) do
			for _,v in ipairs(b:GetChildren()) do
				if v.Name:find("Lazer") then v:Destroy() end
			end
		end
	end
	note("Lasers gone üí•")
end)
btn(misc,"Rebirth",function()
	game:GetService("ReplicatedStorage").RebirthRemote:FireServer()
	note("Rebirth Sent üîÅ")
end)


