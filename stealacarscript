local player = game.Players.LocalPlayer


local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ZeroHub"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true


local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 740, 0, 580)
mainFrame.Position = UDim2.new(0.5, -370, 0.5, -290)
mainFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.ClipsDescendants = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 14)


local stroke = Instance.new("UIStroke")
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(100,0,255)
stroke.Transparency = 0.55
stroke.Parent = mainFrame


local bgGradient = Instance.new("UIGradient")
bgGradient.Color = ColorSequence.new(
    Color3.fromRGB(45,45,45),
    Color3.fromRGB(10,10,10)
)
bgGradient.Rotation = 90
bgGradient.Parent = mainFrame

-- DESTROY BUTTON
local destroyBtn = Instance.new("TextButton")
destroyBtn.Size = UDim2.new(0, 42, 0, 42)
destroyBtn.Position = UDim2.new(1, -52, 0, 12)
destroyBtn.Text = "‚úñ"
destroyBtn.TextColor3 = Color3.fromRGB(255,255,255)
destroyBtn.BackgroundColor3 = Color3.fromRGB(220,20,20)
destroyBtn.BorderSizePixel = 0
destroyBtn.TextScaled = true
destroyBtn.Parent = mainFrame
Instance.new("UICorner", destroyBtn).CornerRadius = UDim.new(0,10)

destroyBtn.MouseEnter:Connect(function()
    destroyBtn.BackgroundColor3 = Color3.fromRGB(255,50,50)
end)
destroyBtn.MouseLeave:Connect(function()
    destroyBtn.BackgroundColor3 = Color3.fromRGB(220,20,20)
end)

destroyBtn.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- SCROLL FRAME
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, -20, 1, -80)
scrollFrame.Position = UDim2.new(0, 10, 0, 70)
scrollFrame.CanvasSize = UDim2.new(0,0,0,0)
scrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
scrollFrame.ScrollBarThickness = 6
scrollFrame.BackgroundTransparency = 1
scrollFrame.Parent = mainFrame

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0,10)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Parent = scrollFrame

Instance.new("UIPadding", scrollFrame).PaddingLeft = UDim.new(0, 8)


local function showMessage(text)
    local msg = Instance.new("TextLabel")
    msg.Size = UDim2.new(1, -20, 0, 32)
    msg.Position = UDim2.new(0,10,1,-40)
    msg.BackgroundColor3 = Color3.fromRGB(40,40,40)
    msg.TextColor3 = Color3.fromRGB(0,255,140)
    msg.Text = text
    msg.Font = Enum.Font.GothamBold
    msg.TextScaled = true
    msg.BorderSizePixel = 0
    msg.Parent = mainFrame
    Instance.new("UICorner", msg).CornerRadius = UDim.new(0,6)

    task.delay(2,function() msg:Destroy() end)
end

local function createHeader(text)
    local h = Instance.new("TextLabel")
    h.Size = UDim2.new(1,0,0,30)
    h.Text = text
    h.BackgroundTransparency = 1
    h.TextColor3 = Color3.fromRGB(180,180,255)
    h.Font = Enum.Font.GothamBold
    h.TextScaled = true
    h.TextXAlignment = Enum.TextXAlignment.Left
    h.Parent = scrollFrame
end

local function createTextbox(ph)
    local t = Instance.new("TextBox")
    t.Size = UDim2.new(1,0,0,40)
    t.BackgroundColor3 = Color3.fromRGB(35,35,35)
    t.TextColor3 = Color3.fromRGB(255,255,255)
    t.PlaceholderText = ph
    t.Font = Enum.Font.Gotham
    t.TextScaled = true
    t.ClearTextOnFocus = false
    t.Parent = scrollFrame
    Instance.new("UICorner", t).CornerRadius = UDim.new(0,9)

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(100,100,255)
    stroke.Thickness = 1
    stroke.Transparency = 0.6
    stroke.Parent = t

    return t
end

local function createButton(text,callback)
    local b = Instance.new("TextButton")
    b.Size = UDim2.new(1,0,0,44)
    b.BackgroundColor3 = Color3.fromRGB(25,25,25)
    b.TextColor3 = Color3.fromRGB(235,235,255)
    b.Text = text
    b.Font = Enum.Font.Gotham
    b.TextScaled = true
    b.Parent = scrollFrame
    Instance.new("UICorner",b).CornerRadius = UDim.new(0,9)

    local g = Instance.new("UIGradient")
    g.Color = ColorSequence.new(
        Color3.fromRGB(70,0,200),
        Color3.fromRGB(40,40,190)
    )
    g.Rotation = 60
    g.Parent = b

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(130,0,255)
    stroke.Transparency = 0.6
    stroke.Parent = b

    b.MouseEnter:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(55,55,55)
    end)
    b.MouseLeave:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(25,25,25)
    end)

    b.MouseButton1Click:Connect(function()
        local ok,err = pcall(callback)
        if not ok then warn(err) end
    end)
end



createHeader("MOVEMENT")
local wsBox = createTextbox("WalkSpeed (default 16)")
local wsActive = false

createButton("Toggle WalkSpeed Loop", function()
    wsActive = not wsActive
    showMessage("Speed: "..(wsActive and "ENABLED" or "OFF"))
    task.spawn(function()
        while wsActive do
            task.wait(.15)
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid.WalkSpeed = tonumber(wsBox.Text) or 16
            end
        end
    end)
end)

createHeader("BASES")
local tpBox = createTextbox("Base Number")

local function getBase(n)
    return workspace:FindFirstChild("Bases") and workspace.Bases:FindFirstChild("Base"..n)
end

createButton("TP To Base", function()
    local n = tonumber(tpBox.Text)
    local b = n and getBase(n)
    if b and b:FindFirstChild("MultiplierAmount") then
        player.Character:SetPrimaryPartCFrame(
            CFrame.new(b.MultiplierAmount.Position + Vector3.new(0,5,0))
        )
        showMessage("Teleported ‚úî")
    end
end)

createButton("Lock Base", function()
    local n = tonumber(tpBox.Text)
    local b = n and getBase(n)
    if b and b:FindFirstChild("Lock") then
        player.Character:SetPrimaryPartCFrame(
            CFrame.new(b.Lock.Position + Vector3.new(0,5,0))
        )
        showMessage("Base Locked üîê")
    end
end)

createHeader("REWARDS")
createButton("Infinite Money", function()
    game:GetService("ReplicatedStorage").LuckyTradePurchase:FireServer(-9e12)
end)

createButton("Claim Free Reward", function()
    game:GetService("ReplicatedStorage").ClaimFreeReward:FireServer()
end)

createButton("Spin Wheel", function()
    game:GetService("ReplicatedStorage").SpinToWinRequest:FireServer()
end)

createHeader("MISC")
createButton("Remove Lasers", function()
    if workspace:FindFirstChild("Bases") then
        for _,b in pairs(workspace.Bases:GetChildren()) do
            for _,v in ipairs(b:GetChildren()) do
                if v.Name:find("Lazer") then v:Destroy() end
            end
        end
    end
    showMessage("Lasers gone üí•")
end)

createButton("Rebirth", function()
    game:GetService("ReplicatedStorage").RebirthRemote:FireServer()
    showMessage("Rebirth Sent üîÅ")
end)


